@model ComicBookGallery.Models.Drawing

@{
    ViewBag.Title = Model.DisplayName;
    ViewBag.ShowBackBar = true;
}

<h2>@Model.DisplayName</h2>

<div class="row">
    <div class="col-md-6">
        <div class="well">
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">ID</span>
                <input type="text" class="form-control" placeholder="Username" aria-describedby="basic-addon1">
            </div>
            <h5><label>Series Title:</label> @Model.DrawingName</h5>
            <h5><label>Issue #:</label> @Model.DrawingNumber</h5>
            @if (Model.DrawingRevisions.Length > 0)
            {
                <h5>Artists:</h5>
                <div>
                    <ul>
                        @foreach (var drawing in Model.DrawingRevisions)
                        {
                            <li>@drawing.ID</li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>
</div>

<!DOCTYPE html>


