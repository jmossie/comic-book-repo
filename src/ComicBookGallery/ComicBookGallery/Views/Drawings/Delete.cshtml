@model ComicBookGallery.Models.Drawing
@{
    ViewBag.Title = "Delete Drawing";
}

<h2>@ViewBag.Title</h2>

<div class="alert alert-danger">
    Are you sure you want to delete the following entry?
</div>

<div class="row">
    <div class="col-lg-6">

        <div class="row">
            <div class="col-xs-4 col-sm-3">
                @Html.LabelFor(d => d.CreateDate)
            </div>
            <div class="col-xs-8 col-sm-9">
                @Model.CreateDate.ToShortDateString()
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-sm-3">
                @Html.LabelFor(d => d.DrawingName)
            </div>
            <div class="col-xs-8 col-sm-9">
                @Model.DrawingName
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-sm-3">
                @Html.LabelFor(d => d.DrawingNumber)
            </div>
            <div class="col-xs-8 col-sm-9">
                @Model.DrawingNumber
            </div>
        </div>

        @using (Html.BeginForm())
        {
            <div class="pad-top">
                <button type="submit" class="btn btn-danger btn-lg margin-right">
                    <span class="glyphicon glyphicon-trash"></span> Delete
                </button>
                <a href="@Url.Action("Index")" class="btn btn-warning btn-lg">
                    <span class="glyphicon glyphicon-remove"></span> Cancel
                </a>
            </div>
        }

    </div>

</div>

