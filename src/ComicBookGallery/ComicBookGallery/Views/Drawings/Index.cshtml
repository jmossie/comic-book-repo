@model List<ComicBookGallery.Models.Drawing>
@{
    ViewBag.Title = "Drawing Register";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["Message"]
    </div>
}

<div class="stats">
    <h2 class="stats-header h3">Number of Drawings</h2>
    <div class="stats-left">
        <span class="stats-number">@ViewBag.NumOfDrawings.ToString("n0")</span> total
    </div>
    <div class="stats-right">
        <span class="stats-number">Something</span> total
    </div>
</div>

<h2>@ViewBag.Title</h2>

<div class="row">
    
    <table class="table table-striped">
        <thead>
            <tr>  
                <th>Drawing Number</th>
                <th>Drawing Revision</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var drawing in Model)
            {
                <tr>
                    
                    <td>@drawing.DrawingNumber</td>
                    <td></td>
                    <td>@drawing.DrawingName</td>
                    <!--<td><button class="btn-primary">Add Rev.</button></td>-->
                    <td>
                        @Html.ActionLink("New Rev.", "RevCreate", "Drawings", new { id = drawing.Id }, new { @class = "btn btn-xs btn-info" })
                        @Html.ActionLink("Edit", "Detail", "Drawings", new { id = drawing.Id }, new { @class = "btn btn-xs btn-info"})
                    </td>
                    </tr>
                    @*foreach (var revision in drawing.DrawingRevisions)
                    {
                    <tr>
                        <td></td>
                        <td>@revision.ID</td> 
                        <td>@revision.Name</td>
                        <td>@Html.ActionLink("Edit", "Detail", "Drawings", new { id = drawing.Id }, new { @class = "btn btn-xs btn-info" })</td>
                    </tr>
                    }*@
                    
                    
                
            }
            </tbody>

</table> 
</div>

